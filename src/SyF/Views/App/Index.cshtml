@model IEnumerable<SyF.Models.Recipe>

@{

    ViewBag.Title = "Home";
}

<div>
    <div class="col-md-12">
        <h1 class="modal-header">Stuff your Fridge</h1>
        <p>This app will let you save your favourite recipes<p>
            <a class="btn btn-lg btn-info">Go to my recipes</a>

            <ul>
                @foreach (var item in Model)

                {
                <li><h3>@item.Name</h3> : @item.DateCreated.ToString("d")</li>
                <p>@item.Calories <b>Calories</b> : @item.DateCreated.ToString("d")</p>
               


                }


            </ul>


    </div>


</div>